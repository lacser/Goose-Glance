{
  "name": "goose-glance-react",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:popup": "vite components/popup",
    "dev:content": "vite components/content",
    "build": "tsc -p components/popup/tsconfig.app.json && tsc -p components/popup/tsconfig.node.json && tsc -p components/content/tsconfig.app.json && tsc -p components/content/tsconfig.node.json && vite build components/popup && vite build components/content && if exist public xcopy /E /I /Y public dist",
    "lint": "eslint .",
    "preview:popup": "vite preview components/popup",
    "preview:content": "vite preview components/content"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5"
  }
}
